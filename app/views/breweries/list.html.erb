<h2> Breweries </h2>

<div ng-app="myApp" ng-controller="BreweriesController">
    <table class="table table-hover">
        <thead>
            <th><a ng-click="sort_by('name')">Name</a></th>
            <th><a ng-click="sort_by('year')">Year</a></th>
        </thead>
        <tr ng-repeat="brewery in breweries | orderBy:order">
            <td>{{brewery.name}}</td>
            <td>{{brewery.year}}</td>
        </tr>
    </table>
</div>
